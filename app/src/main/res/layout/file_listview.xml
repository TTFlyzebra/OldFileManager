<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv01_item"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/lv01_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/empty"
        android:focusable="false"
        android:padding="2dp" />

    <CheckBox
        android:id="@+id/lv01_chk"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="0dp" />

    <LinearLayout
        android:id="@+id/item2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/lv01_chk"
        android:layout_toRightOf="@id/lv01_icon"
        android:orientation="vertical"
        android:padding="2dp" >

        <TextView
            android:id="@+id/lv01_tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lv01_tv02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textColor="#002F00"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
